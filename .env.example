# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://root:rootpassword@mongodb:27017/quanlyminhchung?authSource=admin
MONGODB_USER=root
MONGODB_PASSWORD=rootpassword
MONGODB_DATABASE=quanlyminhchung

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,zip

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@quanlyminhchung.local

# Application Configuration
APP_NAME=Quản Lý Minh Chứng ĐBCL
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
