NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# MongoDB - THAY ĐỔI MẬT KHẨU
MONGODB_URI=mongodb://root:${MONGODB_PASSWORD}@mongodb:27017/quanlyminhchung?authSource=admin
MONGODB_USER=root
MONGODB_PASSWORD=${MONGODB_PASSWORD}
MONGODB_DATABASE=quanlyminhchung

# JWT - THAY ĐỔI SECRET
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRE=7d

# File Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,zip

# Application URLs
APP_NAME=Quản Lý Minh Chứng ĐBCL
APP_URL=https://quanlyminhchung.local
FRONTEND_URL=https://quanlyminhchung.local
FRONTEND_API_URL=https://quanlyminhchung.local/api

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# Redis - THAY ĐỔI PASSWORD
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@quanlyminhchung.local
